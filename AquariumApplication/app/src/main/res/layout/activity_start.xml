<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false"
    tools:context=".MainActivity"
    android:id="@+id/startlayout"
    android:gravity="center"
    android:background="@drawable/ocean1">

    <view
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        class="aw.aquariumapplication.StartView"
        android:id="@+id/startview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button"
        android:id="@+id/startbutton"
        android:background="@drawable/shape_blue"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false"
        android:onClick="startButtonClick"
        android:layout_marginBottom="70dp"
        android:padding="10dp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titlewhite"
        android:src="@drawable/title_white"
        android:foreground="@drawable/title_blue"
        android:layout_alignTop="@+id/titleBlue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleBlue"
        android:src="@drawable/title_blue"
        android:layout_above="@+id/startbutton"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:paddingBottom="50dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleKana"
        android:src="@drawable/title_kana"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
