<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/container"
    android:background="@drawable/ocean2">

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="aw.aquariumapplication.DrawFishView"
        android:id="@+id/fishView"
        android:visibility="visible"
        android:background="#ffffff"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button"
        android:onClick="okButtonClick"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/fishView"
        android:layout_alignEnd="@+id/fishView"
        android:background="@drawable/shape_blue"
        android:textSize="20dp"
        android:textColor="#FFFFFF" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" あか "
        android:id="@+id/redButton"
        android:background="@drawable/shape_red"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/fishView"
        android:layout_toRightOf="@+id/blueButton"
        android:layout_toEndOf="@+id/blueButton"
        android:textColor="#FFFFFF" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" あお "
        android:id="@+id/blueButton"
        android:background="@drawable/shape_darkblue"
        android:layout_above="@+id/fishView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="きいろ"
        android:id="@+id/yellowButton"
        android:background="@drawable/shape_yellow"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/fishView"
        android:layout_toRightOf="@+id/redButton"
        android:layout_toEndOf="@+id/redButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" くろ "
        android:id="@+id/blackButton"
        android:background="@drawable/shape_black"
        android:textColor="#ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@+id/yellowButton"
        android:layout_toEndOf="@+id/yellowButton"
        android:layout_above="@+id/fishView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="けす"
        android:id="@+id/resetButton"
        android:textSize="20dp"
        android:background="@drawable/shape_gray"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/fishView"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginRight="10dp" />

</RelativeLayout>
