<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/container"
    android:background="#78ffee">

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="aw.aquariumapplication.DrawFishView"
        android:id="@+id/fishView"
        android:visibility="visible"
        android:background="#ffffff"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button"
        android:onClick="okButtonClick"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/fishView"
        android:layout_alignEnd="@+id/fishView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="あか"
        android:id="@+id/redButton"
        android:background="#ff1919"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/fishView"
        android:layout_toRightOf="@+id/blueButton"
        android:layout_toEndOf="@+id/blueButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="あお"
        android:id="@+id/blueButton"
        android:background="#1825ff"
        android:layout_above="@+id/fishView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="きいろ"
        android:id="@+id/yellowButton"
        android:background="#fffb04"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/fishView"
        android:layout_toRightOf="@+id/redButton"
        android:layout_toEndOf="@+id/redButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="くろ"
        android:id="@+id/blackButton"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@+id/yellowButton"
        android:layout_toEndOf="@+id/yellowButton"
        android:layout_above="@+id/fishView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="けす"
        android:id="@+id/resetButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

</RelativeLayout>
